{
  "compilerOptions": {
    "module": "nodenext",
    "target": "es2022",
    "paths": {
      "@src/*": ["./src/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "allowImportingTsExtensions": true,
    "noEmit": true
  }
}

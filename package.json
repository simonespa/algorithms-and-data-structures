    "lint": "eslint --ext .ts .",
    "lint:fix": "eslint --fix --ext .ts .",
    "pretty": "prettier --write '**/**/*.{ts,json,yml,yaml,md}'",
    "ts-check": "tsc --pretty"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/simonespa/algorithms-and-data-structures.git"
  },
  "keywords": [
    "algorithms",
